<div class="content">
	<h1>Usuarios</h1>
	<table>
		<thead>
			<tr>
				<th>User</th>
				<th>Role</th>
				<th>Progress</th>
				<th>Network</th>
				<th>Subdomain </th>
				<th>Acomplishment</th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user|%>
			<tr>
				<td><%= user.email %></td>
				<td><%= user.role %></td>
				<td><%= "Paso  #{user.steap}" if user.finish_training != true %> <%= "Finalizado" if user.finish_training == true %></td>
				<td><%= user.network_name%></td>
				<td> <%= user.subdomain%> </td>
                <td>
				 <progress max="100" value="<%= user.acomplishment_steaps%>" ></progress> <%= user.acomplishment_steaps.to_i%>% 
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<%= will_paginate @users %>
</div>