<div class="content">
	<h1>Redes</h1>
	<table>
		<thead>
			<tr>
				<th>Name</th>
				<th>Steaps</th>
				<th>Progress</th>
				<th>Token de implementaci√≥n</th>
				<th>URL</th>
				<th>Users acomplishment</th>
			</tr>
		</thead>
		<tbody>
			<% @networks.each do |network|%>
			<tr>
				<td><%= network.network_name %></td>

				<td>
				 <%= "Paso  #{network.steap}" if network.finish_training != true %>
				 <%= "Finalizado" if network.finish_training == true %>
				</td>

				<td>
				 <% if network.finish_training == true %>
				 <progress max="100" value="100" ></progress> 100%
				 <%else%>
				 <progress max="100" value="<%= network.acomplishment_steaps%>" ></progress> <%= network.acomplishment_steaps.to_i%>% 
				 <%end%>

				</td>
				<td><%= network.token_network%></td>
				<td><%= network.subdomain%></td>
				<td><progress max="100" value="<%= network.acomplishment_prom%>" ></progress> <%= network.acomplishment_prom%>%</td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<%= will_paginate @networks %>
</div>